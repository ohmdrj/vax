    <repositories>
        <repository>
            <id>nexus</id>
            <url>http://dev.x/nexus/content/groups/public/</url>
        </repository>
        <repository>
            <id>vaadin-releases</id>
            <url>https://oss.sonatype.org/content/repositories/vaadin-releases/</url>
        </repository>
        <repository>
            <id>vaadin-addons</id>
            <url>http://maven.vaadin.com/vaadin-addons</url>
